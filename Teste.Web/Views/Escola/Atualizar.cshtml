@model Teste.Dominio.Models.Escola;

@if (@TempData["MSG_FALHA"] != null)
{
<div class="content">
    <div class="col-md-12">
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <strong>Ops!</strong> @TempData["MSG_FALHA"]
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
    </div>
</div>}

<div class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header card-header-primary">
                        <h4 class="card-title">Atualizar Escola</h4>
                        <p class="card-category">Informe os dados e clique em salvar.</p>
                    </div>
                    <div class="card-body">
                        <form method="post">

                            <input type="hidden" asp-for="Id" />

                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label class="bmd-label-floating">Nome</label>
                                        <input asp-for="Nome" type="text" class="form-control">
                                        <span asp-validation-for="Nome" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label class="bmd-label-floating">Código Inep</label>
                                        <input maxlength="8" asp-for="Inep" type="text" class="form-control">
                                        <span asp-validation-for="Inep" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>

                            @if (ViewBag.Turmas.Count > 0)
                            {
                <div class="row">
                    <div class="col-md-12">
                        <div class="card">
                            <div class="card-header">
                                <h4 class="card-title ">Turmas da Escola</h4>
                            </div>
                            <div class="card-body">
                                <div class="table-responsive">
                                    <table class="table">
                                        <thead class=" text-primary">
                                        <th>
                                            ID
                                        </th>
                                        <th>
                                            Descrição
                                        </th>
                                        <th>
                                            Série
                                        </th>
                                        <th>
                                            Turno
                                        </th>
                                        <th>
                                        </th>
                                        <tbody>
                                            @foreach (var escola in ViewBag.Turmas)
                                            {
                            <tr>
                                <td>
                                    @escola.Id
                                </td>
                                <td>
                                    @escola.Descricao
                                </td>
                                <td>
                                    @escola.Serie
                                </td>
                                <td>
                                    @escola.Turno
                                </td>
                                <td>
                                    <div class="pull-right">
                                        <a asp-action="Atualizar" asp-controller="Turma" asp-route-id="@escola.Id" class="btn btn-primary btn-fab btn-fab-mini btn-round">
                                            <i class="material-icons">edit</i>
                                        </a>
                                    </div>
                                </td>
                            </tr>}
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>}

                            <a asp-controller="Escola" asp-action="Escola" class="btn btn-dark btn-round">
                                <i class="material-icons">arrow_back</i> Voltar
                            </a>

                            <button type="submit" class="btn btn-info pull-right btn-round">
                                <i class="material-icons">save</i> Salvar
                            </button>

                            <a asp-controller="Escola" asp-action="Deletar" asp-route-id="@Model.Id" class="btn btn-danger pull-right btn-round">
                                <i class="material-icons">delete_forever</i> Deletar
                            </a>

                            <div class="clearfix"></div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>