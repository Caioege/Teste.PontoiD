@model Teste.Dominio.Models.Escola;

<div class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header card-header-primary">
                        <h4 class="card-title">Cadastrar Escola</h4>
                        <p class="card-category">Informe os dados e clique em adicionar.</p>
                    </div>
                    <div class="card-body">
                        <form method="post">
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label class="bmd-label-floating">Nome</label>
                                        <input asp-for="Nome" type="text" class="form-control">
                                        <span asp-validation-for="Nome" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label class="bmd-label-floating">Código Inep</label>
                                        <input asp-for="Inep" type="text" class="form-control">
                                        <span asp-validation-for="Inep" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>

                            <a asp-controller="Escola" asp-action="Escola" class="btn btn-dark">
                                <i class="material-icons">arrow_back</i> Voltar
                            </a>

                            <button type="submit" class="btn btn-info pull-right">
                                <i class="material-icons">save</i> Adicionar
                            </button>

                            <div class="clearfix"></div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>