@model Teste.Dominio.Models.Turma;


<div class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header card-header-primary">
                        <h4 class="card-title">Adicionar Turma</h4>
                        <p class="card-category">Informe os dados e clique em adicionar.</p>
                    </div>
                    <div class="card-body">
                        <form method="post">

                            <div class="row">
                                <div class="col-md-12">
                                    <div class="form-group">
                                        <label class="bmd-label-floating">Escola</label>
                                        <select asp-for="EscolaId" asp-items="@ViewBag.Escolas" class="form-control">
                                        </select>
                                    </div>
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-md-12">
                                    <div class="form-group">
                                        <label class="bmd-label-floating">Descrição</label>
                                        <input asp-for="Descricao" type="text" class="form-control">
                                        <span asp-validation-for="Descricao" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label class="bmd-label-floating">Série</label>
                                        <select asp-for="Serie" asp-items="@ViewBag.Serie" class="form-control">
                                        </select>
                                    </div>
                                </div>

                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label class="bmd-label-floating">Turno</label>
                                        <select asp-for="Turno" asp-items="@ViewBag.Turno" class="form-control">
                                        </select>
                                    </div>
                                </div>
                            </div>

                            <a asp-controller="Turma" asp-action="Turma" class="btn btn-dark btn-round">
                                <i class="material-icons">arrow_back</i> Voltar
                            </a>

                            <button type="submit" class="btn btn-info pull-right btn-round">
                                <i class="material-icons">save</i> Adicionar
                            </button>

                            <div class="clearfix"></div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
