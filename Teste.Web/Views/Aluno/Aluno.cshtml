@model List<Teste.Dominio.Models.Aluno>;

<div class="row">
    <div class="col-md-12">
        <div class="pull-right">
            <a class="btn btn-primary btn-round" asp-controller="Aluno" asp-action="Adicionar">
                <i class="material-icons">library_add</i> Adicionar Aluno
            </a>
        </div>
    </div>
</div>

@if (@TempData["MSG_SUCESSO"] != null)
{
    <div class="content">
        <div class="col-md-12">
            <div class="alert alert-success alert-dismissible fade show" role="alert">
                <strong>Daora!</strong> @TempData["MSG_SUCESSO"]
                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
        </div>
    </div>
}

<div class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header card-header-primary">
                        <h4 class="card-title ">Alunos</h4>
                    </div>
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table">
                                <thead class=" text-primary">
                                <th>
                                    ID
                                </th>
                                <th>
                                    Nome
                                </th>
                                <th>
                                    Nascimento
                                </th>
                                <th>
                                    Turma
                                </th>
                                <th>
                                </th>
                                <tbody>
                                    @foreach (var aluno in Model)
                                    {
                                        <tr>
                                            <td>
                                                @aluno.Id
                                            </td>
                                            <td>
                                                @aluno.Nome
                                            </td>
                                            <td>
                                                @aluno.Nascimento.Value.ToShortDateString()
                                            </td>
                                            <td>
                                                @aluno.TurmaAluno.Descricao
                                            </td>
                                            <td>
                                                <a asp-controller="Aluno" asp-action="Atualizar" asp-route-id="@aluno.Id" class="btn btn-primary btn-fab btn-fab-mini btn-round pull-right">
                                                    <i class="material-icons">edit</i>
                                                </a>
                                            </td>
                                        </tr>
                                    }
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
