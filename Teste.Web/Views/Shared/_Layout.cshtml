<!DOCTYPE html>
<html lang="pt_BR">

<head>
    <meta charset="utf-8" />
    <link rel="apple-touch-icon" sizes="76x76" href="~/assets/img/apple-icon.png">
    <link rel="icon" type="image/png" href="~/assets/img/favicon.png">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1" />
    <title>
        Ponto iD Teste
    </title>
    <meta content='width=device-width, initial-scale=1.0, shrink-to-fit=no' name='viewport' />
    <!--     Fonts and icons     -->
    <link rel="stylesheet" type="text/css" href="https://fonts.googleapis.com/css?family=Roboto:300,400,500,700|Roboto+Slab:400,700|Material+Icons" />
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/latest/css/font-awesome.min.css">
    <!-- CSS Files -->
    <link href=@Url.Content("~/assets/css/material-dashboard.css?v=2.1.2") rel="stylesheet" />
    <link href=@Url.Content("~/assets/css/material-dashboard.css?v=2.1.2") rel="stylesheet" />
    <link href=@Url.Content("~/css/site.css") rel="stylesheet" />
    <link href="../css/site.css" rel="stylesheet" />
    <!--   Core JS Files   -->
    <script src=@Url.Content("~/assets/js/core/jquery.min.js")></script>
    <script src=@Url.Content("~/assets/js/core/popper.min.js")></script>
    <script src=@Url.Content("~/assets/js/core/bootstrap-material-design.min.js")></script>
    <script src=@Url.Content("~/assets/js/plugins/perfect-scrollbar.jquery.min.js")></script>
    <script src=@Url.Content("~/assets/js/material-dashboard.js?v=2.1.2") type="text/javascript"></script>
</head>

<body class="">
    <div class="togglemenu">
        <nav class="navbar navbar-expand-lg navbar-transparent navbar-absolute fixed-top ">
            <div class="container-fluid">
                <button class="navbar-toggler" type="button" data-toggle="collapse" aria-controls="navigation-index" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="navbar-toggler-icon icon-bar"></span>
                    <span class="navbar-toggler-icon icon-bar"></span>
                    <span class="navbar-toggler-icon icon-bar"></span>
                </button>
            </div>
        </nav>
    </div>

    <div class="wrapper ">
        <div class="sidebar" data-color="purple" data-background-color="white" data-image="../images/background-layout.jpg">
            <div class="logo">
                <a asp-controller="Escola" asp-action="Escola" class="simple-text logo-normal">
                    Ponto iD
                </a>
            </div>
            <div class="sidebar-wrapper">
                <ul class="nav">
                    <li class="@(ViewContext.RouteData.Values["Controller"].ToString() == "Escola" ? "nav-item active" : "nav-item")">
                        <a class="nav-link" asp-controller="Escola" asp-action="Escola">
                            <i class="material-icons">apartment</i>
                            <p>Escolas</p>
                        </a>
                    </li>
                    <li class="@(ViewContext.RouteData.Values["Controller"].ToString() == "Turma" ? "nav-item active" : "nav-item")">
                        <a class="nav-link" asp-controller="Turma" asp-action="Turma">
                            <i class="material-icons">class</i>
                            <p>Turmas</p>
                        </a>
                    </li>
                    <li class="@(ViewContext.RouteData.Values["Controller"].ToString() == "Aluno" ? "nav-item active" : "nav-item")">
                        <a class="nav-link" asp-controller="Aluno" asp-action="Aluno">
                            <i class="material-icons">school</i>
                            <p>Alunos</p>
                        </a>
                    </li>
                </ul>
            </div>
        </div>
        <div class="main-panel">

            <main>
                @RenderBody()
            </main>

        </div>
    </div>

    @RenderSection("Scripts", required: false)

</body>
</html>